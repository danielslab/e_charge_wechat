<template name="form">
  <view class="header">
    <view class="h2-header">Submit A Station</view>
  </view>
  <view class="container">
    <view class="wrap">

      <form bindsubmit="bindSubmit">

        <view class="user-input">
          <view class="text-area-wrap">
            <textarea value="{{latitude}}" style="input-size" placeholder="latitude" class="input-height" name="latitude" maxlength="-1" auto-height />
          </view>
        </view>

        <view class="user-input">
          <view class="text-area-wrap">
            <textarea value="{{longitude}}" style="input-size" placeholder="longitude" class="input-height" name="longitude" maxlength="-1" auto-height />
          </view>
        </view>

        <view class="user-input">
          <view class="text-area-wrap">
            <textarea value="{{image}}" style="input-size" placeholder="Image" class="input-height" name="image" maxlength="-1" auto-height />
          </view>
        </view>

        <button style="margin-bottom:50px " type="primary" form-type="submit">Submit</button>
      </form>

    </view>
  </view>
</template>